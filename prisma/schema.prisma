generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id() @default(uuid()) @map("_id")
  auth0id String   @unique
  name    String
  email   String?
  Wallet  Wallet[]
}

model Wallet {
  id          String   @id() @default(uuid()) @map("_id")
  address     String   @unique
  secret      String?
  platform    Platform
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  description String?  @default("")
}

enum Platform {
  BYBIT
  TRUST
  METAMASK
  BINANCE
}
